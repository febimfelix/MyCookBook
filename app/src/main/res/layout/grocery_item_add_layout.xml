<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="@dimen/common_top_padding">

    <TextView
            android:id="@+id/id_add_grocery_item_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_grocery_plus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
            android:id="@+id/id_add_grocery_item_add_field"
            android:layout_width="@dimen/add_grocery_title"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/common_top_padding"
            android:inputType="textCapWords"
            android:imeOptions="actionDone"
            android:lines="1"
            app:layout_constraintStart_toEndOf="@id/id_add_grocery_item_plus"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>